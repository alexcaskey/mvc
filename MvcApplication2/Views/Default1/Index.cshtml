@model IEnumerable<MvcApplication2.Models.Person>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            name
        </th>
        <th>
            address
        </th>
        <th>
            city
        </th>
        <th>
            state
        </th>
        <th>
